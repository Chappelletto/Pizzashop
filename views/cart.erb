<h2>Your cart</h2>

<!-- #%= @items.inspect %> -->

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">QTY</th>
    </tr>
  </thead>
  <tbody>
  	<% total_price = 0 %>
  	<% total_qty = 0 %>
  	<% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price    %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_qty += item[1].to_i  %>
    <% end %>
    <tr> 
      <td></td>
      <td><%= total_price %></td>
      <td><%= total_qty %></td>
    </tr>

  </tbody>
</table>

<form action="/place_order" method="POST" role="form">

	<input name="order[orders_input]" type = "hidden" value="<% @orders_input %>" />

  <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Ваше имя">
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон">
  </div>

   <div class="form-group">
    <label>Address</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Delivery address">
  </div>


	<button type="submit" class="btn btn-success btn-lg">Place this order</button>
  <button class="btn btn-danger btn-lg" onclick="return false">Cancel</button>
</form>